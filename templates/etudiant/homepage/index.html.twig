                            <div class="mt-4 sm:mt-0 sm:ml-3 revue-form-actions">
                                <button type="submit" value="Subscribe" name="member[subscribe]" id="member_submit" class="
                      block
                      w-full
                      px-5
                      py-3
                      text-base
                      font-medium
                      text-white
                      bg-blue-600
                      border border-transparent
                      rounded-lg
                      shadow
                      hover:bg-blue-700
                      focus:outline-none
                      focus:ring-2
                      focus:ring-white
                      focus:ring-offset-2
                      focus:ring-offset-gray-300
                      sm:px-10
